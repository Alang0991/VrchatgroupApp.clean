<Application x:Class="VrchatgroupApp.clean.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:VrchatgroupApp.clean.Views"
             xmlns:vm="clr-namespace:VrchatgroupApp.clean.ViewModels"
             xmlns:conv="clr-namespace:VrchatgroupApp.clean.Converters"
             StartupUri="MainWindow.xaml">

    <Application.Resources>

        <!-- ========================= -->
        <!-- Converters -->
        <!-- ========================= -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        <conv:InverseBoolToVisibility x:Key="InverseBoolToVisibility"/>

        <!-- ========================= -->
        <!-- Theme / Brushes -->
        <!-- ========================= -->
        <SolidColorBrush x:Key="AccentBrush" Color="#6FA8FF"/>
        <SolidColorBrush x:Key="SidebarBrush" Color="#141414"/>
        <SolidColorBrush x:Key="PanelBrush" Color="#1C1C1C"/>
        <SolidColorBrush x:Key="SoftBorder" Color="#2A2A2A"/>

        <!-- ========================= -->
        <!-- ViewModel → View Mapping -->
        <!-- ========================= -->

        <!-- LOGIN -->
        <DataTemplate DataType="{x:Type vm:LoginViewModel}">
            <views:LoginView />
        </DataTemplate>

        <!-- MAIN APP SHELL -->
        <DataTemplate DataType="{x:Type vm:ShellViewModel}">
            <views:ShellView />
        </DataTemplate>

        <!-- WELCOME -->
        <DataTemplate DataType="{x:Type vm:WelcomeViewModel}">
            <views:WelcomeView />
        </DataTemplate>

        <!-- DASHBOARD (if still used anywhere) -->
        <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
            <views:DashboardView />
        </DataTemplate>

        <!-- GROUP DETAILS -->
        <DataTemplate DataType="{x:Type vm:GroupDetailViewModel}">
            <views:GroupDetailView />
        </DataTemplate>

    </Application.Resources>
</Application>
