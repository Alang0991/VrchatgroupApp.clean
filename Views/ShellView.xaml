<UserControl x:Class="VrchatgroupApp.clean.Views.ShellView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="#0F0F0F">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ========= SIDEBAR ========= -->
        <Border Grid.Column="0"
                Background="{StaticResource SidebarBrush}"
                BorderBrush="{StaticResource SoftBorder}"
                BorderThickness="0,0,1,0"
                Padding="18">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- PROFILE -->
                <StackPanel Grid.Row="0"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,24">

                    <Ellipse Width="90" Height="90">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="{Binding ProfileImageUrl}"
                                        Stretch="UniformToFill"/>
                        </Ellipse.Fill>
                    </Ellipse>

                    <TextBlock Text="{Binding DisplayName}"
                               Foreground="White"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Margin="0,12,0,2"
                               HorizontalAlignment="Center"/>

                    <TextBlock Text="VRChat User"
                               Foreground="#999"
                               FontSize="12"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- LABEL -->
                <TextBlock Grid.Row="1"
                           Text="YOUR GROUPS"
                           Foreground="#888"
                           FontSize="11"
                           FontWeight="SemiBold"
                           Margin="0,0,0,10"/>

                <!-- GROUP LIST -->
                <ListBox Grid.Row="2"
                         ItemsSource="{Binding Groups}"
                         SelectedItem="{Binding SelectedGroup}"
                         Background="Transparent"
                         BorderThickness="0">

                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Margin" Value="0,6"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="Bg"
                                                Background="#1E1E1E"
                                                CornerRadius="14"
                                                Padding="12">
                                            <ContentPresenter/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Bg" Property="Background" Value="#2A2A2A"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Bg" Property="Background" Value="#333"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <DockPanel>

                                <Border Width="48"
                                        Height="48"
                                        CornerRadius="12"
                                        Background="#333"
                                        DockPanel.Dock="Left">
                                    <Image Source="{Binding IconUrl}"
                                           Stretch="UniformToFill"/>
                                </Border>

                                <StackPanel Margin="12,0,0,0">
                                    <TextBlock Text="{Binding Name}"
                                               Foreground="White"
                                               FontWeight="SemiBold"/>

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding OnlineCount}"
                                                   Foreground="#3DDC84"
                                                   FontSize="11"/>
                                        <TextBlock Text=" online • "
                                                   Foreground="#777"
                                                   FontSize="11"/>
                                        <TextBlock Text="{Binding MemberCount}"
                                                   Foreground="#AAA"
                                                   FontSize="11"/>
                                        <TextBlock Text=" members"
                                                   Foreground="#777"
                                                   FontSize="11"/>
                                    </StackPanel>
                                </StackPanel>

                            </DockPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- LOGOUT -->
                <Button Grid.Row="3"
                        Content="Logout"
                        Command="{Binding LogoutCommand}"
                        Padding="10,6"
                        Width="100"
                        Background="#2A2A2A"
                        Foreground="#DDD"
                        BorderThickness="0"
                        Margin="0,16,0,0"/>
            </Grid>
        </Border>

        <!-- ========= MAIN CONTENT ========= -->
        <Border Grid.Column="1"
                Margin="22"
                Padding="22"
                Background="{StaticResource PanelBrush}"
                BorderBrush="{StaticResource SoftBorder}"
                BorderThickness="1"
                CornerRadius="20">

            <ContentControl Content="{Binding CurrentViewModel}"/>
        </Border>

    </Grid>
</UserControl>
