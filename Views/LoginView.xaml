<UserControl x:Class="VrchatgroupApp.clean.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="#121212">

        <!-- MAIN CARD -->
        <Border Width="360"
                Padding="28"
                CornerRadius="14"
                Background="#1C1C1C"
                BorderBrush="#2A2A2A"
                BorderThickness="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <StackPanel>

                <!-- TITLE -->
                <TextBlock Text="VRChat Group App"
                           FontSize="22"
                           FontWeight="SemiBold"
                           Foreground="White"
                           HorizontalAlignment="Center"/>

                <TextBlock Text="Sign in to continue"
                           Foreground="#AAAAAA"
                           FontSize="12"
                           Margin="0,4,0,22"
                           HorizontalAlignment="Center"/>

                <!-- USERNAME -->
                <TextBlock Text="Username"
                           Foreground="#BBBBBB"/>

                <TextBox Text="{Binding Username}"
                         Height="34"
                         Margin="0,6,0,14"/>

                <!-- PASSWORD -->
                <TextBlock Text="Password"
                           Foreground="#BBBBBB"/>

                <PasswordBox x:Name="PasswordBox"
                             Height="34"
                             Margin="0,6,0,14"/>

                <!-- LOGIN BUTTON -->
                <Button Content="Sign In"
                        Command="{Binding LoginCommand}"
                        Height="38"
                        FontWeight="SemiBold"
                        Margin="0,6,0,0"/>

                <!-- TWO-FACTOR -->
                <StackPanel Margin="0,18,0,0"
                            Visibility="{Binding ShowTwoFactor,
                                         Converter={StaticResource BoolToVisibility}}">

                    <Separator Margin="0,14"/>

                    <TextBlock Text="Two-Factor Authentication"
                               FontWeight="SemiBold"
                               Foreground="White"
                               Margin="0,0,0,10"/>

                    <TextBlock Text="Enter verification code"
                               Foreground="#BBBBBB"/>

                    <TextBox Text="{Binding TwoFactorCode}"
                             Height="34"
                             MaxLength="6"
                             Margin="0,6,0,10"/>

                    <Button Content="Verify Code"
                            Command="{Binding Verify2FACommand}"
                            Height="36"/>
                </StackPanel>

                <!-- STATUS MESSAGE -->
                <TextBlock Text="{Binding StatusMessage}"
                           Foreground="{Binding StatusColor}"
                           TextWrapping="Wrap"
                           Margin="0,16,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- LOADING OVERLAY -->
        <Grid Background="#99000000"
              Visibility="{Binding IsLoading,
                           Converter={StaticResource BoolToVisibility}}">

            <Border Padding="20"
                    CornerRadius="12"
                    Background="#1E1E1E"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

                <StackPanel>

                    <ProgressBar Width="220"
                                 Height="6"
                                 IsIndeterminate="True"/>

                    <TextBlock Text="Signing in…"
                               Foreground="#DDDDDD"
                               Margin="0,12,0,0"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>

    </Grid>
</UserControl>
