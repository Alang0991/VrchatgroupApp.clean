<UserControl x:Class="VrchatgroupApp.clean.Views.WelcomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="{StaticResource PanelBrush}">

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    MaxWidth="520"
                    Margin="40">

            <!-- Title -->
            <TextBlock Text="{Binding Title}"
                       FontSize="32"
                       FontWeight="SemiBold"
                       Foreground="White"
                       TextAlignment="Center"
                       Margin="0,0,0,10"/>

            <!-- Subtitle -->
            <TextBlock Text="{Binding Subtitle}"
                       FontSize="15"
                       Foreground="#AAAAAA"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="0,0,0,22"/>

            <!-- Divider -->
            <Border Height="1"
                    Width="180"
                    Background="{StaticResource SoftBorder}"
                    Opacity="0.7"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,18"/>

            <!-- Helper text -->
            <TextBlock Text="Select a group from the sidebar to view details, members, and moderation tools."
                       FontSize="13"
                       Foreground="#777"
                       TextAlignment="Center"
                       TextWrapping="Wrap"/>
        </StackPanel>

    </Grid>
</UserControl>
